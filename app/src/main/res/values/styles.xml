<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_common_style">
        <item name="android:textSize">@dimen/text_size_visor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="button_action_style" parent="button_common_style">
        <item name="android:layout_marginTop">@dimen/btn_margin_top</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
